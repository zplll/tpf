<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="tpf.pojo.UsersPO">
    <resultMap id="UserResult" type="tpf.pojo.UsersPO">
        <id column = "user_id" property="userId"></id>
        <result column = "name" property="name" />
        <result column = "passwd" property="passwd" />
        <result column = "email_address" property="emailAddress" />
        <result column = "role_id" property="roleId" />
        <result column = "create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    <select id="selectUserByName" parameterType="String" resultMap="UserResult">
        <!--CDATA指原文代入-->
        <![CDATA[
            select * from users where name = #{name}
        ]]>
    </select>
    <select id="selectUserByEmail" parameterType="String" resultMap="UserResult">
        <!--CDATA指原文代入-->
        <![CDATA[
            select * from users where email_address = #{email}
        ]]>
    </select>


</mapper>